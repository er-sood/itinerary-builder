generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Itinerary {
  id          String   @id @default(uuid())
  clientName  String?
  destination String
  trip        Json
  days        Json
  inclusions  Json
  exclusions  Json
  pricing     Json

  status      String   @default("DRAFT") // DRAFT | FINAL
  finalizedAt DateTime?

  createdBy   String
  user        User     @relation("UserItineraries", fields: [createdBy], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



model User {
  id        String   @id          // Supabase auth user id
  email     String   @unique
  role      String               // ADMIN | STAFF
  createdAt DateTime @default(now())

  itineraries Itinerary[] @relation("UserItineraries")
}
