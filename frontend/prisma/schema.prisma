generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Itinerary {
  id          String    @id @default(uuid())
  clientName  String?
  destination String
  trip        Json
  days        Json
  inclusions  Json
  exclusions  Json
  pricing     Json
  status      String    @default("DRAFT")
  finalizedAt DateTime?
  createdBy   String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation("UserItineraries", fields: [createdBy], references: [id])
  clientPhone  String?
  referenceBy  String?
  marginPercent Int?

}

model User {
  id          String      @id
  email       String      @unique
  role        String
  createdAt   DateTime    @default(now())
  itineraries Itinerary[] @relation("UserItineraries")
  properties  Property[] @relation("UserProperties")
}

model Property {
  id            String   @id @default(uuid())
  name          String
  type          String   // HOTEL | HOMESTAY
  country       String
  state         String
  city          String
  starRating    Int?
  contactPerson String
  contactPhone  String?
  websiteLink   String?

  createdBy     String
  createdAt     DateTime @default(now())

  user          User     @relation("UserProperties", fields: [createdBy], references: [id])
}


enum PropertyType {
  HOTEL
  HOMESTAY
}
